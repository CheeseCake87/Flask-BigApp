Select field dumb:

{{ select.input_select_dumb(label="label", name="name", options=options) }}

Set options like (this is done on the template page, just before calling the macro):

{% set options = {
"key": "value",
2: "2",
"3": 3,
} %}

#}

{% macro input_select_dumb(
div=True,
name="",
label="",
class="",
options=None,
selected=None
) %}
    {% if div %}
        <div class="form-element">
    {% endif %}
{% if options == None %}
    {% set options = {} %}
{% endif %}

{% if label != '' %}
    <label for="{{ name }}">{{ label }}</label>
{% endif %}

<select name="{{ name }}" id="{{ name }}">

    {% for key, value in options.items() %}
        <option value="{{ key }}" {%- if selected|string == key -%}selected="selected"{%- endif -%}>
            {{ value }}
        </option>
    {% endfor %}
</select>
{% if div %}
    </div>
{% endif %}
{% endmacro %}

