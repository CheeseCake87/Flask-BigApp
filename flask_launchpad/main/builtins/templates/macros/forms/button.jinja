Submit button:

{{ button.submit(name="name", value="button_text", class="class") }}

#}
{% macro submit(div=True, name="", class="", value="", disabled=False) %}
    {% if div %}
    <div class="form-element">
    {% endif %}
        <input type="submit"
               name="{{ name }}"
               id="{{ name }}"
               class="{{ class }}"
               value="{{ value }}"
               {% if disabled %}
               disabled
               {% endif %}
        />
    {% if div %}
    </div>
    {% endif %}
{% endmacro %}


