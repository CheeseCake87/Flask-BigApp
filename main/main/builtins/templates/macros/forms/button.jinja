{# ------------------

Submit button link:

{{ button.submit_field_link(name="name_name", label="Name Name",
button_type="button-primary", link="http://www.go.com/") }}

#}
{% macro submit_field_link(label="", name="", button_type="", link="") %}
    <a class="button {{ button_type }}" href="{{ link }}" id="{{ name }}">
        {{ label }}
    </a>
{% endmacro %}

