Submit button:

{{ button.submit_field(name="name", value="button_text", class="class") }}

#}
{% macro submit_field(name="", class="", value="") %}
    <input type="submit"
    name="{{ name }}"
    id="{{ name }}"
    class="{{ class }}"
    value="{{ value }}"
    />
{% endmacro %}

