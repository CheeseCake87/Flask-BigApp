{% macro input_field(name="", label="", type="text", class="", placeholder="", required=False, value="",
autocomplete=False, read_only=False, disabled=False) %}

    <div class="form-group">

    {% if label != "" %}
        <label for="{{ name }}">{{ label }}</label>
    {% endif %}

    <input
    type="{{ type }}"

    name="{{ name }}"

    id="{{ name }}"

    class="{{ class }}{% if required %} form_required{% endif %}"

    value="{{ value }}"

    {% if not autocomplete %}
        autocomplete="off"
    {% endif %}

    {% if placeholder != "" %}
        placeholder="{{ placeholder }}"
    {% endif %}

    {% if required %}
        required
    {% endif %}

    {% if read_only %}
        readonly
    {% endif %}

    {% if disabled %}
        disabled
    {% endif %}
    />

    </div>

{% endmacro %}

